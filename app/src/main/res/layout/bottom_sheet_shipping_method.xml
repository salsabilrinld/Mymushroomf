<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metode Pengiriman"
        android:fontFamily="@font/inter_bold"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/reguler_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="Reguler (Rp. 9.000 - Rp. 11.500)"
        android:paddingVertical="8dp" />

    <TextView
        android:id="@+id/nextday_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="Next Day (Rp. 14.000 - Rp. 15.300)"
        android:paddingVertical="8dp" />

    <TextView
        android:id="@+id/cargo_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="Kargo (Rp. 35.000)"
        android:paddingVertical="8dp" />

    <TextView
        android:id="@+id/economic_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_reguler"
        android:text="Ekonomi (Rp. 7.100 - Rp. 7.500)"
        android:paddingVertical="8dp" />
</LinearLayout>
