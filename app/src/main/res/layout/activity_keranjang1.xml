<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PembeliActivity.CartActivity">

    <!-- Header TextView for Cart Title with Shadow -->
    <TextView
        android:id="@+id/cartTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keranjang Saya"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"
        android:shadowColor="#55000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First Product Item Layout -->
    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="4dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/cartTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Select Item Checkbox -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jamur_tiram" />

        <!-- Item Name and Weight -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamur Tiram"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 kg"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Price and Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Item Price -->
            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 30.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <!-- Decrease Quantity Button -->
            <ImageButton
                android:id="@+id/btnDecrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Decrease"
                android:src="@drawable/ic_remove"
                android:elevation="2dp"
                android:padding="4dp" />

            <!-- Item Quantity -->
            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="1"
                android:textSize="16sp" />

            <!-- Increase Quantity Button -->
            <ImageButton
                android:id="@+id/btnIncrease"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Increase"
                android:src="@drawable/ic_add"
                android:elevation="2dp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Delete Item Button -->
        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Delete"
            android:src="@drawable/ic_delete"
            android:elevation="2dp"
            android:padding="4dp" />
    </LinearLayout>

    <!-- Second Product Item Layout -->
    <LinearLayout
        android:id="@+id/itemLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:elevation="4dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/itemLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Select Item Checkbox -->
        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Product Image -->
        <ImageView
            android:id="@+id/image2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/jamur_shitake" />

        <!-- Item Name and Weight -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/itemName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jamur Shiitake"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemWeight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 g"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Price and Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Item Price -->
            <TextView
                android:id="@+id/itemPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 20.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <!-- Decrease Quantity Button -->
            <ImageButton
                android:id="@+id/btnDecrease2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Decrease"
                android:src="@drawable/ic_remove"
                android:elevation="2dp"
                android:padding="4dp" />

            <!-- Item Quantity -->
            <TextView
                android:id="@+id/itemQuantity2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="8dp"
                android:text="1"
                android:textSize="16sp" />

            <!-- Increase Quantity Button -->
            <ImageButton
                android:id="@+id/btnIncrease2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Increase"
                android:src="@drawable/ic_add"
                android:elevation="2dp"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Delete Item Button -->
        <ImageButton
            android:id="@+id/btnDelete2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Delete"
            android:src="@drawable/ic_delete"
            android:elevation="2dp"
            android:padding="4dp" />
    </LinearLayout>




    <!-- Footer Layout for Total Price, Select All, and Buy Button -->
    <LinearLayout
        android:id="@+id/footerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Select All Checkbox -->
        <CheckBox
            android:id="@+id/checkBoxSelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Semua" />

        <!-- Total Price TextView -->
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total: Rp. 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <!-- Buy Button with Shadow Effect -->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beli"
            android:backgroundTint="#FFA726"
            android:textColor="#FFFFFF"
            android:elevation="6dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
