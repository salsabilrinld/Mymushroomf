<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_gravity="center">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/dialog_product_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/jamur_tiram"/>

    <!-- Product Name -->
    <TextView
        android:id="@+id/dialog_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jamur Tiram"
        android:textSize="18sp"
        android:fontFamily="@font/inter_bold"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"/>

    <!-- Price -->
    <TextView
        android:id="@+id/dialog_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 12.000"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"/>

    <!-- Quantity Controls with ImageButton -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageButton
            android:id="@+id/decrease_quantity_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_remove"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Decrease Quantity"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/increase_quantity_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_add"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="Increase Quantity"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Buy Now Button -->
    <Button
        android:id="@+id/buy_now_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli Sekarang"
        android:textColor="@color/white"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="16dp"/>
</LinearLayout>